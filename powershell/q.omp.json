{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  "palette": {
    "primary": "#2fa3f1",
    "secondary": "#eed444",
    "accent": "#EE44AA",
    "background": "transparent",
    "background-inverted": "#FFFFFF",
    "bubble-background": "#333333",
    "text": "#FFFFFF",
    "text-inverted": "#282C34"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "terraform",
          "background": "p:",
          "foreground": "p:accent",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "template": "{{.WorkspaceName}}",
          "trailing_diamond": "\ue0b4 "
        },
        {
          "type": "git",
          "background": "p:bubble-background",
          "foreground": "p:primary",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) (gt .Ahead 0) (gt .Behind 0)}}p:secondary{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:accent{{ end }}"
          ],
          "properties": {
            "branch_max_length": 25,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": "\uf7a3"
          },
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "template": " {{ if .UpstreamURL }}{{ url .UpstreamIcon .UpstreamURL }} {{ end }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "trailing_diamond": "\ue0b4 "
        },
        {
          "type": "path",
          "background": "p:bubble-background",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "agnoster_short",
            "folder_separator_icon": " \ue0b1 ",
            "max_depth": 3
          },
          "trailing_diamond": "\ue0b4 "
        },
        {
          "type": "time",
          "background": "p:bubble-background",
          "foreground": "p:text",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "template": "<p:primary><b>{{ .CurrentDate | date \"15:04:05\" }}</b></>",
          "trailing_diamond": "\ue0b4"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "path",
          "background": "p:background",
          "foreground": "p:text",
          "foreground_templates": [
            "{{ if .Root }}p:accent{{ end }}"
          ],
          "properties": {
            "home_icon": "~",
            "style": "folder"
          },
          "style": "powerline",
          "template": " \uf74a {{ path .Path .Location }}"
        },
        {
          "type": "exit",
          "foreground": "p:primary",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:accent{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "trailing_diamond": "\ue0b1",
          "template": " {{ if gt .Code 0 }}(╯°□°）╯︵ ┻━┻{{ else }}\uf00c{{ end }} "
        }
      ]
    }
  ],
  "secondary_prompt": {
    "background": "transparent",
    "foreground": "p:secondary",
    "template": "\ue0b1 "
  },
  "transient_prompt": {
    "background": "transparent",
    "foreground": "p:text",
    "template": "༼ つ ◕_◕ ༽つ "
  },
  "tooltips": [
    {
      "background": "p:background",
      "foreground": "p:text",
      "leading_diamond": "\ue0b6",
      "properties": {
        "display_default": true
      },
      "style": "diamond",
      "template": " \ue7ad {{ .Profile }}{{ if .Region }}@{{ .Region }}{{ end }} ",
      "tips": [
        "aws"
      ],
      "trailing_diamond": "\ue0b4",
      "type": "aws"
    },
    {
      "background": "p:background",
      "foreground": "p:text",
      "leading_diamond": "\ue0b6",
      "style": "diamond",
      "template": " \ufd03 {{ .Name }} ",
      "tips": [
        "az"
      ],
      "trailing_diamond": "\ue0b4",
      "type": "az"
    }
  ]
}